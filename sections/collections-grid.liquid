<style>

    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
.collections-grid {
    /* padding: 12px 20px 62px; */
    border-top: 0.75px solid #8A938D;
}

.collections-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 17px;
}

.collections-header h2 {
    font-size: 18px;
    line-height: normal;
    letter-spacing: 0.03px;
    text-transform: uppercase;
    margin: 0;
    color: #000000;
}
.collections-header a {
    color: #000;
    font-size: 18px;
    line-height: 100%;
    letter-spacing: 0;
    text-align: right;
    text-decoration: underline;
    text-decoration-style: solid;
    text-decoration-offset: 0%;
    text-decoration-thickness: 0%;
}

.collections-layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4px;
}

.left-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-auto-rows: 1fr;
  gap: 4px;
}

.collection-card {
  position: relative;
  overflow: hidden;
  border-radius: 0;
  height: 506px;
}

.collection-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  transition: .5s ease-in-out;
}
.collection-card img:hover {
    transform: scale(1.1);
}
.collection-overlay {
    position: absolute;
    bottom: 40px;
    left: 16px;
    right: 16px;
    color: #fff;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    border-top: 1px solid #FFFFFF;
    padding-top: 12px;
}

.collection-overlay h3 {
    margin: 0 0 6px;
    font-weight: 500;
    font-size: 18px;
    line-height: normal;
    letter-spacing: -0.2px;
    text-transform: uppercase;
    color: #fff;
}

.collection-overlay p {
    max-width: 360px;
    width: 100%;
    font-weight: 500;
    font-size: 12px;
    line-height: 105%;
    letter-spacing: -0.2px;
    margin: 0;
}
.collection-overlay a {
    font-size: 14px;
    padding: 8px 10px;
    border: 1px solid #fff;
    color: #fff;
    text-decoration: none;
    display: inline-block;
    border-radius: 4px;
    line-height: 115.99999999999999%;
}
.collection-overlay a:hover{
  background: #000;
  border-color:#000;
}
.large-card {
  height: 100%;
}
.custom_product_coll_grid .collection-overlay {
    position: unset;
    color: #1F1F1F;
    display: block;
}

.custom_product_coll_grid .collection-overlay h3 {
    font-size: 28.58px;
    line-height: normal;
    letter-spacing: 0.02px;
    color: #1F1F1F;
}

.custom_product_coll_grid .collection-overlay p {
    font-size: 14.29px;
    line-height: 115.99999999999999%;
    letter-spacing: 0;
    color: #454545;
}

.custom_product_coll_grid .collection-card img {
    height: unset;
}

.custom_product_coll_grid .collection-card {
    overflow: unset;
}

/* Responsive */
@media(max-width: 900px) {
  .collections-layout {
    grid-template-columns: 1fr;
  }

  .left-grid {
    grid-template-columns: 1fr;
  }
}
@media(max-width: 768px) {

  {% comment %} .collections-grid {
    padding: 7.8px 12px 56px;
  } {% endcomment %}

  .collections-grid {
    padding-top: 5px;
    padding-bottom: 55px;
  } 

  .collections-header h2,
  .collections-header a {
    font-size: 14px;
    color: #1F1F1F;
}

  .collections-layout {
    grid-template-columns: 1fr;
    gap: 2px;
  }

  /* LEFT GRID becomes mobile grid */
  .left-grid {
    grid-template-columns: 1fr 1fr;
    gap: 2px;
  }

  /* Large card on top */
  .large-card {
    order: -1;
    aspect-ratio: 0.799;

  }

  .large-card img {
    aspect-ratio: 3 / 4;
  }

  .collection-card img {
    aspect-ratio: 1 / 1.35;
  }

  /* Text alignment */
  .collection-overlay {
    bottom: 12px;
    left: 12px;
    right: 12px;
    justify-content: center;
  }

  .collection-overlay h3 {
    font-size: 14px;
  }

  .collection-overlay p {
    font-size: 12px;
  }

  .collection-overlay a {
    font-size: 11px;
    padding: 5px 10px;
  }

  /* Belt bags full width */
  .collection-card:last-child {
    grid-column: span 1;
  }

  /* Shop all button */
  .shop-all-wrapper {
    text-align: center;
    margin-top: 24px;
  }

  .shop-all-wrapper a {
    border: 1px solid #000;
    padding: 10px 22px;
    text-decoration: none;
    font-size: 13px;
    display: inline-block;
  }
  .collection-card:nth-child(4) .collection-overlay a {
    font-size: 13px;
    line-height: 115.99999999999999%;
    letter-spacing: 0;
    color: #1F1F1F;
    border: 1px solid #1F1F1F;
}

.collection-card:nth-child(4) .collection-overlay {
    bottom: unset;
    top: 47%;
    transform: translateY(-50%);
    left: 14px;
    right: 0;
    margin: 0 auto;
    text-align: center;
    justify-content: center;
}
.left-grid .collection-card a {
    display: block;
}
.left-grid .collection-card .collection-overlay a {
    display: none;
}
.left-grid .collection-card:nth-child(4) a{
    display: block;
    padding: 6px 12px;
}
.collection-card.large-card .collection-overlay p {
    display: none;
}
.collection-card.large-card .collection-overlay {
    justify-content: space-between;
}
.collection-card {
  height: auto;
}
}

</style>

<section class="collections-grid section-{{ section.id }}-padding {{ section.settings.addclass }}">
  <div class="page-width">
  <div class="collections-header">
    <h2>{{ section.settings.heading }}</h2>
    {% if section.settings.view_all_link != blank %}
      <a href="{{ section.settings.view_all_link }}">{{ section.settings.view_all_text }}</a>
    {% endif %}
  </div>

  <div class="collections-layout">
    <!-- LEFT GRID -->
    <div class="left-grid">
      {% for block in section.blocks %}
        {% if block.type == 'small_card' %}
          <div class="collection-card">
            {% if block.settings.image %}
              <a href="{{ block.settings.link }}">
              <img src="{{ block.settings.image | image_url: width: 800 }}" alt="">
              </a>
            {% endif %}
            <div class="collection-overlay">
              {% if block.settings.title != blank %}<h3>{{ block.settings.title }}</h3>{% endif %}
             {% if block.settings.content != blank %} {{ block.settings.content }}{% endif %}
              {% if block.settings.link != blank %}<a href="{{ block.settings.link }}">{{ block.settings.button_text }}</a>{% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- RIGHT LARGE CARD -->
    {% for block in section.blocks %}
      {% if block.type == 'large_card' %}
        <div class="collection-card large-card">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url: width: 1200 }}" alt="">
          {% endif %}
          <div class="collection-overlay">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.description }}</p>
            <a href="{{ block.settings.link }}">{{ block.settings.button_text }}</a>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  </div>
</section>

{% schema %}
{
  "name": "Collections Grid",
  "settings": [
    {
      "type": "text",
      "id": "addclass",
      "label": "AddClass"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Collections"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all text",
      "default": "See more"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View all link"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "small_card",
      "name": "Small Collection Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Collection name"
        },
         {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Collection link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Shop now"
        }
      ]
    },
    {
      "type": "large_card",
      "name": "Large Collection Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Belt Bags"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Redefining the way you carry essentials hands-free."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Collection link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Shop now"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Collections Grid",
      "blocks": [
        { "type": "small_card" },
        { "type": "small_card" },
        { "type": "small_card" },
        { "type": "large_card" }
      ]
    }
  ]
}
{% endschema %}
