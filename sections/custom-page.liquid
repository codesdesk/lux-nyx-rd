
<section class="terms-wrapper">
{%- style -%}
  .section-{{ section.id }}-padding {
  background: {{ section.settings.bg_color }};
  padding-top: {{ section.settings.padding_top  }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media only screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_mobile_top  }}px;
      padding-bottom: {{ section.settings.padding_mobile_bottom }}px;
    }
  }
{% endstyle %}

  <div class="page-width terms-grid section-{{ section.id }}-padding">

    <div class="large-up-hide medium-hide">
        {% render 'breadcrumbs' %}
        </div>
    
    {% if section.settings.title != blank %}<h1 class="terms-title large-up-hide medium-hide">{{ section.settings.title }}</h1>{% endif %}
       <div class="terms-contet-wrapper large-up-hide medium-hide">
      {% if section.settings.last_updated != blank %}
      <p class="terms-updated">
        Last Updated: {{ section.settings.last_updated }}
      </p>
      {% endif %}
      {% if section.settings.term_maincontent != blank %}
      <div class="terms-content">
       {{ section.settings.term_maincontent }}
      </div>
      {% endif %}
      </div>

    <!-- LEFT SIDEBAR -->



    <aside class="terms-sidebar">
      <div class="small-hide">
        {% render 'breadcrumbs' %}
        </div>

      <ul>
        {% if section.settings.page_links == 'content_links' %}
          {% for block in section.blocks %}
            <li>
              <a href="#term-{{ forloop.index }}" class="{% if link.active %}active{% endif %}">
              {% if section.settings.show_index  %}  {{ forloop.index }}. {% endif %}{{ block.settings.heading }}
              </a>
            </li>
          {% endfor %}
        {% else %}
          {% for link in section.settings.page_menu_links.links %}
            <li>
              <a href="{{ link.url }}" title="{{ link.title | escape }}" class="{% if link.active %}active{% endif %}">
                {{ link.title | escape }}
              </a>
            </li>
          {% endfor %}
        {% endif %}
      </ul>
    </aside>

    <!-- RIGHT CONTENT -->
    <div class="terms-content">
       
      {% if section.settings.title != blank %}<h1 class="terms-title small-hide">{{ section.settings.title }}</h1>{% endif %}
       <div class="terms-contet-wrapper small-hide">
      {% if section.settings.last_updated != blank %}
      <p class="terms-updated">
        Last Updated: {{ section.settings.last_updated }}
      </p>
      {% endif %}
      {% if section.settings.term_maincontent != blank %}
      <div class="terms-content">
       {{ section.settings.term_maincontent }}
      </div>
      {% endif %}
      </div>
      <div class="terms-items-manage">
      {% for block in section.blocks %}
        <div id="term-{{ forloop.index }}" class="terms-item">
          <h3>{% if section.settings.show_index %}{{ forloop.index }}. {% endif %}{{ block.settings.heading }}</h3>
          <div class="terms-text">
            {{ block.settings.content }}
          </div>
        </div>
      {% endfor %}
      </div>
    </div>

  </div>
</section>
{% style %}
.terms-grid {
  display: grid;
  grid-template-columns: 500px 1fr;
  gap: 200px;
}
.terms-sidebar .page-width {
    padding: 0;
}
.terms-sidebar {
  position: sticky;
  align-self:start;
  top: 100px;
  transition: top .2s ease-in-out;
}

aside.terms-sidebar .breadcrumb {
  margin-bottom: 15px;
  font-size: 14px;
  line-height: 1.15;
}



body:has(.scrolled-past-header.shopify-section-header-hidden) .terms-sidebar{
  top: 0;
}
.terms-contet-wrapper {
    margin-bottom: 64px;
    padding-bottom: 17px;
    max-width:842px;
    width:100%;
}
.terms-items-manage {
    max-width: 842px;
    width: 100%;
}
.terms-back {
  display: inline-block;
  margin-bottom: 20px;
  font-size: 14px;
  text-decoration: none;
  color: #000;
}

.terms-sidebar ul {
  list-style: none;
  padding: 0;
  margin: 2px 0 0 0;
}

.terms-sidebar li {
  margin-bottom: 4px;
  line-height: 19px;
}

.terms-sidebar a {
    color: #1F1F1F80;
    font-family: 'Helvetica Neue LT Pro';
    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    letter-spacing: 0;
    text-transform: uppercase;
    text-decoration: none;
    text-decoration-style: solid;
    text-decoration-thickness: 0;
}
.terms-sidebar a:hover {
  text-decoration: underline;
  color: #1F1F1F;
}
.terms-sidebar a.active {
    color: #1F1F1F;
    font-weight: 500;
    text-decoration: underline;
}
.terms-title {
  font-family: var(--custom-font-heading-family);
  font-weight:400;
  font-style:Italic;
  font-size: 72px;
  line-height: normal;
  padding-top: 43px;
  padding-bottom: 6px;
  letter-spacing: 0;
  color:#1F1F1F;
  text-transform:capitalize;
  margin:0;
}

.terms-updated, .terms-content > p {
    color: #1F1F1F;
    font-family: 'Helvetica Neue LT Pro';
    font-weight: 500;
    font-size: 14px;
    line-height: 127%;
    letter-spacing: 0px;
    margin: 0px 0 0 92px;
}

.terms-item {
    margin-bottom: 45px;
    border-top: 1px solid #8A938D;
}

.terms-item h3 {
    font-family: 'Helvetica Neue LT Pro';
    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    letter-spacing: 0;
    text-transform: uppercase;
    margin: 8px 0 4px 3px;
}

.terms-text {
    color: #2F2F2F;
    font-weight: 500;
    font-size: 16px;
    line-height: 120%;
    letter-spacing: 0;
    font-family: 'Helvetica Neue LT Pro';
    padding-left:100px;
}
.terms-text ul {
    padding-inline-start: 31px;
    letter-spacing: -0.05px;
    line-height: 118%;
}
.terms-text p {
    margin: 4px 0;
    color: #2F2F2F;
    font-family: Helvetica Neue LT Pro;
    font-weight: 500;
    font-size: 16px;
    line-height: 120%;
}
.terms-text a {
    color: #2F2F2F;
    text-decoration: none;
}
.terms-content a {
    color: #1F1F1F;
}
@media screen and (max-width:1299px){
  .terms-title {
  font-size: 65px;
}
.terms-grid {
  gap: 50px;
}
}
/* MOBILE */
@media screen and (max-width: 990px) {
  .terms-grid {
    grid-template-columns: 1fr;
    gap:0;
  }
  .terms-sidebar {
    position: relative;
    top: auto;
    margin-bottom: 40px;
  }
}
@media screen and (max-width:767px){
    .terms-title{
        font-size:32px;
        padding-top:17px;
    }
    .terms-text{
        padding-left:0;
    }
    .terms-contet-wrapper,
    .terms-sidebar {
        margin-bottom: 56px;
    }
    .terms-contet-wrapper {
      padding-bottom: 20px;
    }
    .terms-sidebar ul{
        margin:0;
    }
    .terms-updated, .terms-content > p  {
      margin: 0px;
    }
    .terms-text ul {
      padding-inline-start: 26px;
      margin-top: 15px;
      margin-bottom: 13px;
    }
}
{% endstyle %}

{% schema %}
{
  "name": "Custom page",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "Terms & Conditions"
    },
    {
      "type": "text",
      "id": "last_updated",
      "label": "Last Updated Text",
      "default": "July 2, 2025"
    },
    {
      "type": "richtext",
      "id": "term_maincontent",
      "label": "Content"
    },
    {
      "type": "header",
      "content": "Page settings"
    },
    {
      "type": "select",
      "id": "page_links",
      "label": "Page links",
      "options": [
        {
          "value": "content_links",
          "label": "Content Links"
        },
        {
          "value": "custom_links",
          "label": "Custom Links"
        }
      ],
      "default": "content_links"
    },
    {
      "type": "link_list",
      "id": "page_menu_links",
      "label": "Page menu",
      "visible_if": "{{ section.settings.page_links == 'custom_links' }}"
    },
    {
      "type": "checkbox",
      "id": "show_index",
      "label": "Show label index",
      "default":true
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 150,
      "step": 2,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 150,
      "step": 2,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_mobile_top",
      "label": "Padding Mobile Top",
      "min": 0,
      "max": 150,
      "step": 2,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_mobile_bottom",
      "label": "Padding Mobile Bottom",
      "min": 0,
      "max": 150,
      "step": 2,
      "default": 60
    },
  ],
  "blocks": [
    {
      "type": "term",
      "name": "Term Section",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Section Heading",
          "default": "Use of Our Website"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Section Content",
          "default": "<p>Add your content here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom page"
    }
  ]
}
{% endschema %}
