    line-height: normal;
    margin: 1px 0;
    color: #1F1F1F;
    margin-bottom:6px;
}

.product-btn {
    font-size: 12px;
    border: 1px solid #1F1F1F;
    padding: 4px 8px;
    border-radius: 4px;
    text-decoration: none;
    color: #000;
}
.product-btn:hover{
  background: #000;
  color:#fff; 
}
.homedesign_bottom .product-card {
    display: flex;
    align-items: flex-start;
    width: 100%;
    max-width: 342px;
    column-gap: 19px;
    justify-content: space-between;
    padding: 20px;
    top:10px;
    left:10px;
}
.homedesign_bottom .product-title,
.homedesign_bottom .product-price,
.homedesign_bottom .product-btn{
    font-size: 14px;
    letter-spacing: -0.4px;
    line-height: 95%;
