

<section class="design-ethos">
  <div class="ethos-header">
    <h2>{{ section.settings.section_title }}</h2>
  </div>

  <div class="ethos-grid">
    {% for block in section.blocks %}
      <div class="ethos-item">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | image_url: width: 1200 }}" alt="">
        {% endif %}

        <div class="overlay">
          <h3>{{ block.settings.overlay_title }}</h3>
          {% if block.settings.overlay_button != blank %}
            <a href="{{ block.settings.overlay_link }}" class="overlay-btn">
              {{ block.settings.overlay_button }}
            </a>
          {% endif %}
        </div>

        <div class="product-card">
          <p class="product-title">{{ block.settings.product_title }}</p>
          <p class="product-price">{{ block.settings.product_price }}</p>
          <a href="{{ block.settings.product_link }}" class="product-btn">Shop now</a>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
.design-ethos {
  padding: 40px 20px;
}

.ethos-header h2 {
  font-size: 14px;
  letter-spacing: 2px;
  margin-bottom: 20px;
}

.ethos-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
}

.ethos-item {
  position: relative;
  overflow: hidden;
}

.ethos-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.overlay {
    position: absolute;
    top: 50%;
    left: 0;
    color: #fff;
    text-align: center;
    right: 0;
    transform: translateY(-50%);
}

.overlay h3 {
    margin-bottom: 10px;
    font-weight: 500;
    font-size: 68px;
    line-height: 100%;
    letter-spacing: -0.2rem;
    text-align: center;
    text-transform: uppercase;
    color: #fff;
}

.overlay-btn {
  font-size: 12px;
  border: 1px solid #fff;
  padding: 6px 12px;
  color: #fff;
  text-decoration: none;
}

.product-card {
  position: absolute;
  top: 12px;
  left: 12px;
  background: #fff;
  padding: 12px;
  border-radius: 6px;
  max-width: 160px;
}

.product-title {
  font-size: 12px;
  font-weight: 600;
  margin:0;
}

.product-price {
    font-size: 12px;
    line-height: normal;
    margin: 8px 0;
}

.product-btn {
    font-size: 12px;
    color: #000;
    border: 1px solid #1F1F1F;
    padding: 4px 8px;
    border-radius: 4.09px;
    text-decoration: none;
    line-height: 115.99999999999999%;
}

@media(max-width: 768px){
  .ethos-grid {
    grid-template-columns: 1fr;
  }

  .overlay h3 {
    font-size: 28px;
  }
}
</style>
{% schema %}
{
  "name": "Design Ethos Section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Heading",
      "default": "DESIGN ETHOS"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Ethos Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Main Image"
        },
        {
          "type": "text",
          "id": "overlay_title",
          "label": "Overlay Heading",
          "default": "SMART DESIGN"
        },
        {
          "type": "text",
          "id": "overlay_button",
          "label": "Overlay Button Text",
          "default": "Our Design Philosophy"
        },
        {
          "type": "url",
          "id": "overlay_link",
          "label": "Overlay Button Link"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "Product Title"
        },
        {
          "type": "text",
          "id": "product_price",
          "label": "Product Price"
        },
        {
          "type": "url",
          "id": "product_link",
          "label": "Product Link"
        }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Design Ethos",
      "blocks": [
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}