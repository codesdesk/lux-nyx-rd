    font-size: 40px;
    letter-spacing: -0.05rem;
    margin: 4px 0;
  }
  .product-card{
    display:none;
  }
  .overlay-btn {
    font-size: 8.83px;
    border: 0.68px solid #fff;
    padding: 4px 8px;
    color: #fff;
    text-decoration: none;
    line-height: 115.99999999999999%;
    border-radius: 2.72px;
}
