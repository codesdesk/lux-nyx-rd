    width: fit-content;
    margin-bottom: 0;
    line-height: 16px;
}
.ethos-swiper:not(.swiper-initialized ) > .swiper-wrapper{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  gap: 5px;
  box-sizing: border-box;
}

.ethos-swiper:not(.swiper-initialized ) > .swiper-wrapper > .swiper-slide{
  display:block;
  width: 100%;
  max-width: calc(100% / 2);
}
.design_ethos_custom .smart-design-mobile {
  display: none;
}

