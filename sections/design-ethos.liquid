  padding: 6px 12px;
  color: #fff;
  text-decoration: none;
  border:none;
}
.overlay-btn--border {
    border: 1px solid #ffffff;
  }
.overlay-btn:hover{
  background:#000;
  border-color:#000;
}
.ethos-item .product-card {
  position: absolute;
  top: 12px;
  left: 12px;
  background: #fff;
  padding: 12px 15px 12px 12px;
  border-radius: 4px;
  max-width: 126px;
  text-align: left;
  box-sizing : border-box;
}

.product-title {
    font-size: 12px;
    line-height: normal;
    text-transform: uppercase;
    font-weight: 600;
    margin: 0;
    color: #1F1F1F;
}

.product-price {
    font-size: 12px;
    line-height: normal;
    margin: 1px 0;
    color: #1F1F1F;
    margin-bottom: 3px;
}

.homedesign_bottom.design-ethos .product-price {
  margin-top:0px;
}

.homedesign_bottom.design-ethos .product-btn {
    padding: 9px 10px;
}

.homedesign_bottom.design-ethos .product-rating-wrapper {
    margin-top: 6px;
}

.design_ethos_custom .product-price {
    margin-top: 10px;
}

.product-btn {
    font-size: 12px;
    border: 1px solid #1F1F1F;
    padding: 4px 8px;
    border-radius: 4px;
    text-decoration: none;
    color: #000;
}
.product-btn:hover{
  background: #000;
  color:#fff; 
}
.homedesign_bottom .product-card {
    display: flex;
    align-items: flex-start;
    width: 100%;
    max-width: 342px;
    column-gap: 19px;
    justify-content: space-between;
    padding: 20px;
    top:10px;
    left:10px;
}
.homedesign_bottom .product-title,
.homedesign_bottom .product-price,
.homedesign_bottom .product-btn{
    font-size: 14px;
    letter-spacing: -0.4px;
    line-height: 95%;
}
.homedesign_bottom .product-rating{
    width: fit-content;
    margin-bottom: 0;
    line-height: 16px;
}
.ethos-swiper:not(.swiper-initialized ) > .swiper-wrapper{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  gap: 5px;
  box-sizing: border-box;
}

.ethos-swiper:not(.swiper-initialized ) > .swiper-wrapper > .swiper-slide{
  display:block;
  width: 100%;
  max-width: calc(100% / 2);
}
.design_ethos_custom .smart-design-mobile {
  display: none;
}

.design-ethos img.smart-design-mobile {
    display: none;
}

.design-ethos:has(.page-width) .ethos-swiper:not(.swiper-initialized) .swiper-wrapper {
  padding-left: 20px;
  width: 100%;
  max-width: calc( 100% - 20px)
}
.design-ethos:has(.page-width) .ethos-swiper:not(.swiper-initialized) .swiper-wrapper .swiper-slide {
  max-width: calc(100% / {{section.settings.slide_show}});
}


@media screen and (max-width: 990px) {
