.design_ethos_custom .smart-design-desktop {
    display: none;
}
.design_ethos_custom .smart-design-mobile {
  display: block;
  height: 455px;
}
}

</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.ethos-swiper', {
      slidesPerView: 2,
      spaceBetween: 5,
      loop: false,
      navigation: {
        nextEl: '.ethos-next',
        prevEl: '.ethos-prev'
      },
      breakpoints: {
        0: {
          slidesPerView: 1
        },
        750: {
          slidesPerView: 2
        }
      }
    });
  });
</script>

{% schema %}
{
  "name": "Design Ethos Section",
  "settings": [
    {
      "type": "text",
      "id": "addclass",
      "label": "AddClass"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Heading",
      "default": "DESIGN ETHOS"
    },
    {
      "type": "text",
      "id": "header_link_text",
      "label": "Section Button Label"
    },
    {
      "type": "url",
      "id": "header_link",
      "label": "Section Button Link"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Ethos Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Main Image"
        },
        {
          "type": "image_picker",
          "id": "mobile-design-image",
          "label": "Mobile Image"
        },
        {
          "type": "text",
          "id": "overlay_title",
          "label": "Overlay Heading",
          "default": "SMART DESIGN"
        },
        {
          "type": "inline_richtext",
          "id": "overlay_content",
          "label": "Overlay Content"
        },
        {
          "type": "text",
          "id": "overlay_button",
          "label": "Overlay Button Text",
          "default": "Our Design Philosophy"
        },
        {
          "type": "checkbox",
          "id": "enable_border",
          "label": "Enable button border",
          "default": false
        },
        {
          "type": "url",
          "id": "overlay_link",
          "label": "Overlay Button Link"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "Product Title"
        },
        {
          "type": "text",
          "id": "product_price",
          "label": "Product Price"
        },
        {
          "type": "url",
          "id": "product_link",
          "label": "Product Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Design Ethos",
      "blocks": [
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}