</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const slidesDesktop = {{ section.settings.slide_show | times: 1 }};
    console.log(slidesDesktop)
    new Swiper('.section-{{ section.id }}-padding .ethos-swiper', {
      spaceBetween: 12,
      loop: false,
      {% if section.settings.container_width == false %}
        slidesOffsetBefore: 0,
        slidesOffsetAfter: 0, 
      {% endif %}
      navigation: {
        nextEl: '.section-{{ section.id }}-padding .ethos-next',
        prevEl: '.section-{{ section.id }}-padding .ethos-prev'
      },
      breakpoints: {
        0: {
          {% if section.settings.container_width == false %}
            slidesOffsetBefore: 12, // left spacing
            slidesOffsetAfter:12,  //
          {% endif %}
          slidesPerView: 1
        },
        750: {
          {% if section.settings.container_width == false %}
            slidesOffsetBefore: 20, // left spacing
            slidesOffsetAfter:20,  //
          {% endif %}
          slidesPerView: slidesDesktop
        }
      }
    });
  });
</script>


{% schema %}
{
  "name": "Design Ethos Section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "addclass",
      "label": "AddClass"
    },
    {
      "type": "checkbox",
      "id": "container_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Heading",
      "default": "DESIGN ETHOS"
    },
    {
      "type": "text",
      "id": "header_link_text",
      "label": "Section Button Label"
    },
    {
      "type": "url",
      "id": "header_link",
      "label": "Section Button Link"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "slide_show",
      "min": 1,
      "max": 3,
      "step": 0.1,
      "default": 2,
      "label": "Slides to show"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Ethos Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Main Image"
        },
        {
          "type": "image_picker",
          "id": "mobile-design-image",
          "label": "Mobile Image"
        },
        {
          "type": "text",
          "id": "overlay_title",
          "label": "Overlay Heading",
          "default": "SMART DESIGN"
        },
        {
          "type": "inline_richtext",
          "id": "overlay_content",
          "label": "Overlay Content"
        },
        {
          "type": "text",
          "id": "overlay_button",
          "label": "Overlay Button Text",
          "default": "Our Design Philosophy"
        },
        {
          "type": "checkbox",
          "id": "enable_border",
          "label": "Enable button border",
          "default": false
        },
        {
          "type": "url",
          "id": "overlay_link",
          "label": "Overlay Button Link"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "Product Title"
        },
        {
          "type": "text",
          "id": "product_price",
          "label": "Product Price"
        },
        {
          "type": "url",
          "id": "product_link",
          "label": "Product Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Design Ethos",
      "blocks": [
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}