<div class="design-ethos section-{{ section.id }}-padding {{ section.settings.addclass }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {% if section.settings.section_title != blank %}
    <div class="ethos-header {% if section.settings.container_width == true %}full-width{% else %}page-width{% endif %}">
      <h2>{{ section.settings.section_title }}</h2>
      <a href="{{ section.settings.header_link }}" class="ethos-link">
        {{ section.settings.header_link_text }}
      </a>
    </div>
  {% endif %}

  <div class="swiper ethos-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="ethos-item">
            {% if block.settings.image %}
              <a href="{{ block.settings.overlay_link }}">
              <img src="{{ block.settings.image | image_url: width: 2000 }}" alt="" class="smart-design-desktop">
              </a>
            {% endif %}
            {% if block.settings.mobile-design-image %}
              <a href="{{ block.settings.overlay_link }}">
              <img src="{{ block.settings.mobile-design-image | image_url: width: 351 }}" alt="" class="smart-design-mobile">
              </a>
            {% endif %}
            {% assign product_url = block.settings.product_link %}

            {% if product_url contains '/products/' %}
              {% assign handle = product_url | split: '/products/' | last | split: '?' | first %}
              {% assign product = all_products[handle] %}
            {% endif %}

            <!-- Product card -->
            <div class="product-card">
              <div class="product-title">{{ block.settings.product_title }} 
                {% if block.settings.product_link  != blank %}
                  <div class="product-rating-wrapper">
                    <div data-bv-show="inline_rating" data-bv-product-id="{{ product.id }}" data-bv-redirect-url="{{ shop.secure_url }}{{ product.url }}" data-bv-seo="false"></div>
                  </div>
                {% endif %}
              </div>
             
              <p class="product-price">{{ block.settings.product_price }}</p>
              <a href="{{ block.settings.product_link }}" class="product-btn">
                Shop now
              </a>
            </div>

            <!-- Center overlay -->
            <div class="overlay">
                {% if block.settings.overlay_title != blank %}
              <h3>{{ block.settings.overlay_title }}</h3>
              {% endif %}
               {% if block.settings.overlay_content != blank %}
              <p class="large-up-hide medium-hide">{{ block.settings.overlay_content }}</p>
              {% endif %}
            {% if block.settings.overlay_link != blank %}
              <a href="{{ block.settings.overlay_link }}" class="overlay-btn {% if block.settings.enable_border %}overlay-btn--border{% endif %}" >
                {{ block.settings.overlay_button }}
              </a>
              {% endif %}
            </div>

          </div>
        </div>
      {% endfor %}
    </div>
    </div>
</div>



