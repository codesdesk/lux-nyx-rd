    padding: 7.8px 11px 56px;
} {% endcomment %}
.design_ethos_custom .ethos-header h2{
    font-size: 14px ;
    letter-spacing: 0;
    line-height: normal;
}
.ethos-header { 
    margin-bottom: 14px;
}
.homedesign_bottom .product-card {
    top: unset;
    left: unset;
    bottom: 12px;
    right: 12px;
    flex-direction: column;
    max-width: unset;
    width: unset;
    padding: 12px;
}
.homedesign_bottom .product-title,
.homedesign_bottom .product-price,
.homedesign_bottom .product-btn{
