<section class="design-ethos {{ section.settings.addclass }}">
  <div class="ethos-header">
    <h2>{{ section.settings.section_title }}</h2>
    <a href="{{ section.settings.header_link }}" class="ethos-link">
      {{ section.settings.header_link_text }}
    </a>
  </div>

  <div class="swiper ethos-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="ethos-item">

            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url: width: 2000 }}" alt="">
            {% endif %}

            <!-- Product card -->
            <div class="product-card">
              <div class="product-title">{{ block.settings.product_title }} 
                <p class="product-rating">★★★★★ (17)</p>
                 

            </div>
             
              <p class="product-price">{{ block.settings.product_price }}</p>
              <a href="{{ block.settings.product_link }}" class="product-btn">
                Shop now
              </a>
            </div>

            <!-- Center overlay -->
            <div class="overlay">
              <h3>{{ block.settings.overlay_title }}</h3>
              <p class="large-up-hide medium-hide">{{ block.settings.overlay_content }}</p>
              <a href="{{ block.settings.overlay_link }}" class="overlay-btn">
                {{ block.settings.overlay_button }}
              </a>
            </div>

          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>



<style>
.design-ethos {
  padding: 7.8px 20px 96px;
}
.ethos-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom:26px;
}
.ethos-link {
    font-size: 14px;
    line-height: normal;
    letter-spacing: 0;
    text-align: right;
    text-decoration: underline;
    text-decoration-style: solid;
    text-decoration-offset: 0;
    text-decoration-thickness: 0;
    color: #949494;
}
.product-rating {
    margin: 5px 0 8px;
    font-weight: 500;
    font-size: 12px;
    line-height: 115.99999999999999%;
    letter-spacing: -0.2rem;
    text-transform: uppercase;
}
.ethos-header h2 {
  font-size: 14px;
  line-height:normal;
  letter-spacing: 0;
  margin: 0;
}

.ethos-swiper {
  width: 100%;
}

.swiper-slide {
  height: auto;
}

.ethos-item {
  position: relative;
  overflow: hidden;
}

.ethos-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.overlay {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  text-align: center;
  color: #fff;
}

.overlay h3 {
  font-weight: 500;
  font-size: 68px;
  line-height: normal;
  letter-spacing: -0.2rem;
  text-transform: uppercase;
  margin-bottom: 10px;
  color:#fff;
}
.overlay p {
    font-weight: 500;
    font-size: 9.51px;
    line-height: 105%;
    letter-spacing: 0;
    text-align: center;
    padding: 0 23px;
    margin:4px 0;
}
.overlay-btn {
  font-size: 12px;
  border: 1px solid #fff;
  padding: 6px 12px;
  color: #fff;
  text-decoration: none;
}

.product-card {
  position: absolute;
  top: 12px;
  left: 12px;
  background: #fff;
  padding: 12px 15px 12px 12px;
  border-radius: 6px;
  max-width: 160px;
  text-align:left;
}

.product-title {
  font-size: 12px;
  line-height:normal;
  text-transform:uppercase;
  font-weight: 600;
  margin: 0;
  color:#1F1F1F;
}

.product-price {
    font-size: 12px;
    line-height: normal;
    margin: 8px 0;
    color: #1F1F1F;
}

.product-btn {
  font-size: 12px;
  border: 1px solid #1F1F1F;
  padding: 4px 8px;
  border-radius: 4px;
  text-decoration: none;
  color: #000;
}

/* Mobile */
@media (max-width: 768px) {
  .overlay h3 {
    font-size: 40px;
    letter-spacing: -0.05rem;
    margin: 4px 0;
  }
  .product-card{
    display:none;
  }
  .overlay-btn {
    font-size: 8.83px;
    border: 0.68px solid #fff;
    padding: 4px 8px;
    color: #fff;
    text-decoration: none;
    line-height: 115.99999999999999%;
    border-radius: 2.72px;
}
.design-ethos {
    padding: 7.8px 11px 56px;
}
.ethos-header h2 {
    font-size: 14px;
    letter-spacing: 0;
    line-height: normal;
}
.ethos-header { 
    margin-bottom: 14px;
}
}

</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.ethos-swiper', {
      slidesPerView: 2,
      spaceBetween: 5,
      loop: false,
      navigation: {
        nextEl: '.ethos-next',
        prevEl: '.ethos-prev'
      },
      breakpoints: {
        0: {
          slidesPerView: 1
        },
        768: {
          slidesPerView: 2
        }
      }
    });
  });
</script>

{% schema %}
{
  "name": "Design Ethos Section",
  "settings": [
    {
      "type": "text",
      "id": "addclass",
      "label": "AddClass"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Heading",
      "default": "DESIGN ETHOS"
    },
    {
      "type": "text",
      "id": "header_link_text",
      "label": "Section Button Label"
    },
    {
      "type": "url",
      "id": "header_link",
      "label": "Section Button Link"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Ethos Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Main Image"
        },
        {
          "type": "text",
          "id": "overlay_title",
          "label": "Overlay Heading",
          "default": "SMART DESIGN"
        },
        {
          "type": "inline_richtext",
          "id": "overlay_content",
          "label": "Overlay Content"
        },
        {
          "type": "text",
          "id": "overlay_button",
          "label": "Overlay Button Text",
          "default": "Our Design Philosophy"
        },
        {
          "type": "url",
          "id": "overlay_link",
          "label": "Overlay Button Link"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "Product Title"
        },
        {
          "type": "text",
          "id": "product_price",
          "label": "Product Price"
        },
        {
          "type": "url",
          "id": "product_link",
          "label": "Product Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Design Ethos",
      "blocks": [
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}