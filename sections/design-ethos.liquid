  overflow: hidden;
}

.ethos-item img {
  width: 100%;
  height: 100%;
  display:block;
  object-fit: cover;
  transition: .5s ease-in-out;
}
.ethos-item img:hover {
    transform: scale(1.1);
}
.overlay {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  text-align: center;
  color: #fff;
}

.overlay h3 {
  font-weight: 500;
  font-size: 68px;
  line-height: normal;
  letter-spacing: -0.02em;
  text-transform: uppercase;
  margin-bottom: 10px;
  color:#fff;
}
