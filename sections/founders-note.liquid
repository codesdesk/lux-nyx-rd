{% comment %}
  Founder’s Note – Fully Customizable Section
{% endcomment %}

<section class="founders-note-section {{ section.settings.addclass }}">
  <div class="founders-note-container">
    <div class="founders-note-wrapper">
        {% if section.settings.eyebrow != blank %}
        <p class="founders-note-eyebrow">
          {{ section.settings.eyebrow }}
        </p>
      {% endif %}
      <a class="founder_shop_button" href="{{ section.settings.shop_btn_link }}">{{ section.settings.shop_btn_label }}</a>
    </div>

    <!-- Left Content -->
    <div class="founders-note-text">     

      {% if section.settings.quote != blank %}
        <blockquote class="founders-note-quote">
          {{ section.settings.quote }}
        </blockquote>
      {% endif %}

      {% if section.settings.author != blank %}
        <p class="founders-note-author">
          — {{ section.settings.author }}
        </p>
      {% endif %}
    </div>

    <!-- Right Content -->
    <div class="founders-note-media">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="{{ section.settings.author | escape }}"
          loading="lazy"
        >
      {% endif %}
      <div class="founder_bottom">
      {% if section.settings.supporting_text != blank %}
        <p class="founders-note-supporting">
          {{ section.settings.supporting_text }}
        </p>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}"
           class="founders-note-button">
           {%  if section.settings.show_icon %}
      <svg width="11" height="8" viewBox="0 0 11 8" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" clip-rule="evenodd" d="M9.043 3.354L6.396 0.708L7.104 0L10.957 3.854L7.104 7.708L6.396 7.001L9.043 4.354H0V3.354H9.043Z" fill="#1F1F1F"/>
      </svg>
      {% endif %}

          {{ section.settings.button_label }}
        </a>
      {% endif %}
      </div>
    </div>

  </div>
</section>

<style>
.founders-note-section {
   padding:{% comment %} {{ section.settings.padding_top }}px {% endcomment %}14px  0 {{ section.settings.padding_bottom }}px;
  background: {{ section.settings.background_color }};
  border-bottom: 1px solid #8A938D;
}
.founders-note-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 0.65px solid rgba(138, 147, 141, 1);
}
.founders-note-media {
    display: flex;
    flex-wrap:wrap;
    align-items: end;
    justify-content:end;
    gap:12px;
}
.founder_bottom {
    max-width: 411px;
    width: 100%;
}
.founders-note-container {
  max-width: 1729px;
  margin: 0 auto;
  padding: 0 20px;
  {% comment %} display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  gap: 60px; {% endcomment %}
  align-items: center;
}

.founders-note-eyebrow {
  font-size: 18px;
  line-height: 100%;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  margin: 0;
  color: {{ section.settings.eyebrow_color }};
}
.founder_shop_button{
  font-size: 16px;
  line-height: 100%;
  letter-spacing: 0;
  text-decoration: underline;
  text-decoration-style: solid;
  text-decoration-offset: 0;
  text-decoration-thickness: 0;
  color:#000;
}
.founders-note-quote {
  font-size: {{ section.settings.quote_size }}px;
  line-height: 1.09;
  font-weight: 500;
  margin: 22px  0 27px;
  color: {{ section.settings.text_color }};
  border:0;
  padding:0;
  text-indent: 240px;
  letter-spacing: -0.01em;
  font-family: 'Helvetica Neue LT Pro';
  font-style:normal;
}
.founders-note-quote p strong {
    font-weight: 500;
    font-size: 28px;
    line-height: 105%;
    text-indent: 240px;
    letter-spacing: -0.1rem;
}
.founders-note-quote p {
    margin: 0;
}
.founders-note-quote em {
  font-family: serif;
  font-style: italic;
}

.founders-note-author {
  font-size: 14px;
  font-weight: 600;
  color: {{ section.settings.text_color }};
}

.founders-note-media img {
  width: 100%;
  max-width: 417px;
  height: auto;
  border-radius: {{ section.settings.image_radius }}px;
}
.founders-note-supporting {
    margin-bottom: 14px;
    margin-left: 4px;
    color: {{ section.settings.supporting_text_color }};
    font-size: 14px;
    line-height: 100%;
    letter-spacing: 0.1px;
}
.founders-note-button {
  display: inline-block;
  padding: 6px 12px;
  border: 1px solid {{ section.settings.button_border }};
  color: {{ section.settings.button_text }};
  border-radius:4px;
  text-decoration: none;
  font-size: 14px;
  margin-left: 8px;
  line-height:115.99999999999999%;
  transition: all 0.2s ease;
}

.founders-note-button:hover {
  background: {{ section.settings.button_border }};
  color: #fff;
}
.founders-note-button:hover svg path {
    fill: #fff;
}
.story_show_custom .founders-note-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.story_show_custom .founder_shop_button {
    font-size: 18px;
    line-height: 100%;
    padding-right: 5px;
    letter-spacing: 0;
    text-transform: capitalize;
    text-decoration: underline;
    text-decoration-style: solid;
    color: #1f1f1f;
}
.story_show_custom .founders-note-eyebrow {
    font-size: 18px;
    line-height: 100%;
    padding-top: 4px;
    text-transform: uppercase;
    margin: 0;
    color: #1f1f1f;
}
.story_show_custom .founders-note-quote {
    font-size: 56px;
    line-height: 1.02;
    font-weight: 500;
    margin: 0px 0 0px;
    color: #1f1f1f;
    border: 0;
    padding: 0;
    text-indent: 225px;
    letter-spacing: -0.02em;
    font-family: 'Helvetica Neue LT Pro';
    font-style: normal;
}
.story_show_custom .founders-note-supporting {
    margin-bottom: 12px;
    margin-top: 0px;
    letter-spacing: -0.37px;
}
.story_show_custom .founders-note-button {
    line-height: 13px;
}

/* Mobile */
@media (max-width: 768px) {
.founders-note-eyebrow,
.founder_shop_button {
    font-size: 14px;
    padding-top: 8px;
}
.founders-note-quote{
  font-size:32px;
  text-indent:0;
  margin-top: 11.2px;
  line-height: 1.04;
  margin-bottom: 16px;
}
.founders-note-quote p strong {
    font-size: 14px;
    line-height: 90%;
    text-indent: 0;
    letter-spacing: 0.2px;
    padding-top: 17px;
    display: block;
}
.founders-note-supporting{
  display:none;
}
.founders-note-media {
    gap: 16px;
}
.founders-note-button {
    display: block;
    text-align: center;
    width: 100%;
}
.founders-note-section {
    padding: 43px 0 56px;
    border-bottom: 1px solid #8A938D;
}
.founders-note-container {
    padding: 0 11px 0px 9px;
}
}
</style>

{% schema %}
{
  "name": "Founder's Note",
  "settings": [
     {
      "type": "text",
      "id": "addclass",
      "label": "AddClass"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Top label",
      "default": "FOUNDER’S NOTE"
    },
    {
      "type": "text",
      "id": "shop_btn_label",
      "label": "Shop Button"
    },
    {
      "type": "url",
      "id": "shop_btn_link",
      "label": "Button Link"
    },
    {
      "type": "richtext",
      "id": "quote",
      "label": "Quote text",
      "default": "<p><strong>Too often, bags were either beautiful or practical—rarely both.</strong> I created bags <em>for those who refuse to compromise</em>—on presence, on purpose, on how they show up.</p>"
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author",
      "default": "Lisa Hu, Founder"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Founder image"
    },
    {
      "type": "textarea",
      "id": "supporting_text",
      "label": "Supporting text",
      "default": "Did you know as few as 7% of products marketed toward women are actually designed by women?"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Show Button Icon",
      "default": false
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "About Us"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },

    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f7f5f2"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Main text color",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "eyebrow_color",
      "label": "Eyebrow color",
      "default": "#555555"
    },
    {
      "type": "color",
      "id": "supporting_text_color",
      "label": "Supporting text color",
      "default": "#444444"
    },
    {
      "type": "color",
      "id": "button_text",
      "label": "Button text color",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "button_border",
      "label": "Button border color",
      "default": "#111111"
    },

    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "quote_size",
      "label": "Quote font size",
      "min": 24,
      "max": 56,
      "step": 2,
      "default": 42
    },
    {
      "type": "range",
      "id": "image_radius",
      "label": "Image border radius",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 160,
      "step": 2,
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Founder's Note"
    }
  ]
}
{% endschema %}
