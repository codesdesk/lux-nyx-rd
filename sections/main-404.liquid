{% comment %} <style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 750px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }
</style> {% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top  }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media only screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_mobile_top  }}px;
      padding-bottom: {{ section.settings.padding_mobile_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="template-custom page-width center">
    {%if section.settings.heading !=blank%}
      <h1 class="heading-title_wrapper">{{ section.settings.heading }}</h1>
    {%endif%}
      <div class="item-container">
        {%if section.settings.title !=blank%}
          <p class="not-found-paragraph">{{ section.settings.title }}</p>
        {%endif%}
        <div class="items-divider">
          <div class="divider-line">
            {% if section.settings.text != blank %}
              <div class="bottom-subheading">{{ section.settings.text }}</div>
            {% endif %}
          </div>
          {%- if section.settings.button_label != blank -%}
            <a class="back-button"  href="{{ section.settings.button_link }}">
              {%- if section.settings.icon != blank -%}
                <img src="{{ section.settings.icon | img_url: 'master' }}" alt="{{ section.settings.icon.alt }}" class="left-arrow-icon">
              {% endif %}
              {{ section.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
  </div>
</div>
{% schema %}
{
  "name": "Main 404 Section", 
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Page Not Found"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Button Icon"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "header",
      "content": "Padding Settings"
    },
    {
      "type": "number",
      "id": "padding_top",
      "label": "padding  top",
      "default": 10
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "padding bottom",
      "default": 10
    },
    {
      "type": "header",
      "content": "Mobile Padding Settings"
    },
    {
      "type": "number",
      "id": "padding_mobile_top",
      "label": "padding mobile top",
      "default": 10
    },
    {
      "type": "number",
      "id": "padding_mobile_bottom",
      "label": "padding mobile bottom",
      "default": 10
    }
  ],
  "presets": [
    {
      "name": "Main 404 Section",
      "category": "Custom Section"
    }
  ]
}
{% endschema %}
