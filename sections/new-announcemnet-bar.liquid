

<style>
.announcement-wrapper {
  background: {{ section.settings.bg_color }};
  color: {{ section.settings.text_color }};
  font-size: {{ section.settings.font_size }}px;
  padding: 5px 0px;
  width: 100%;
  line-height: 17px;
}

.announcement-desktop {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.announcement-left,
.announcement-right {
  white-space: nowrap;
}

.announcement-left strong {
  font-weight: 600;
}

.swiper-slide {
  text-align: center;
}

.announcement-swiper:not(.swiper-initialized) .swiper-slide {
  display: none;
}
.announcement-swiper:not(.swiper-initialized) .swiper-slide:first-child {
    display: block;
    width: 100%;
    max-width: 100%;
}

@media (min-width: 769px) {
  .announcement-swiper {
    overflow: visible;
  }

  .announcement-swiper .swiper-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .announcement-swiper .swiper-slide {
    width: auto !important;
    flex: 0 0 auto;
    text-align: center;
    white-space: nowrap;
  }
}

</style>

<div class="announcement-wrapper">
  <div class="page-width">
    <div class="announcement-mobile">
      <div class="swiper announcement-swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              {{ block.settings.text }}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>


<script>
document.addEventListener('DOMContentLoaded', function () {
  if (window.innerWidth <= 768) {
    new Swiper('.announcement-swiper', {
      loop: true,
      autoplay: {
        delay: {{ section.settings.autoplay_speed }},
        disableOnInteraction: false,
      },
      speed: 600,
      slidesPerView: 1
    });
  }
});
</script>



{% schema %}
{
  "name": "Custom Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_slider",
      "label": "Enable Mobile Sliderr",
      "default": false
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 10,
      "max": 20,
      "step": 1,
      "default": 14
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Mobile Slider Autoplay Speed (ms)",
      "min": 2000,
      "max": 8000,
      "step": 500,
      "default": 3000
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Mobile Slide",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Slide Text",
          "default": "Get 10% off your first purchase"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar Custom"
    }
  ]
}
{% endschema %}
