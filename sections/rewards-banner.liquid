     text-transform: uppercase;
  }

  .rewards_tiers_custom .top-content-wrpper {
    margin-top: 24px;
  }
  .rewards_tiers_custom .section-top-content {
    padding-bottom: 0px;
  }
  .rewards_tiers_custom .section-top-content:has(.rewards-banner__intro) {
      margin-bottom: 1px;
  }

  .rewards-banner details.accordion__item span {
