{% assign step_count = 0 %}
{% assign accordion_count = 0 %}

{% for block in section.blocks %}
  {% if block.type == 'step' %}
    {% assign step_count = step_count | plus: 1 %}
  {% endif %}
  {% if block.type == 'accordion' %}
    {% assign accordion_count = accordion_count | plus: 1 %}
  {% endif %}
{% endfor %}

{% style %}
.rewards-banner--{{ section.id }} {
  position: relative;
  overflow: hidden;
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  background-color: {{ section.settings.section_bg }};
}

.rewards-banner--{{ section.id }}.rewards-banner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5px;
}
.rewards-banner--{{ section.id }}.is-full-width .page-width {
  max-width: 100%;
  padding-left: 0;
  padding-right: 0;
}

.rewards-banner--{{ section.id }} .rewards-banner__media {
    position: relative;
}
.rewards-banner--{{ section.id }} .rewards-banner__media img {
  display:block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.rewards-banner--{{ section.id }} .rewards-banner__overlay {
  position: absolute;
  inset: 0;
  z-index: 1;
  background-color: {{ section.settings.overlay_color }};
  opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
}
.rewards-banner--{{ section.id }} .rewards-banner__inner {
  position: relative;
  z-index: 2;
}
.rewards-banner--{{ section.id }} .rewards-banner__content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  gap: 40px;
  height: 100%;
  margin-right: 20px;
  text-transform: uppercase;
}
.rewards-banner--{{ section.id }} .rewards-banner__title {
  font-size: {{ section.settings.title_size_desktop }}px;
  color: {{ section.settings.text_color_desktop }};
  margin: 0;
  text-transform: none;
  margin-bottom: 16px;
  line-height: 100%;
  max-width: 660px;
  margin: 0;
  margin-left: 20px;
  letter-spacing :-0.02em;
}
.rewards-banner--{{ section.id }} .section-top-content:has(.rewards-banner__intro) {
    margin-bottom: 16px;
}
.rewards-banner--{{ section.id }} .rewards-banner__intro {
  font-size: {{ section.settings.intro_size_desktop }}px;
  color: {{ section.settings.text_color_desktop }};
  max-width: 520px;
  margin: 0;
  line-height: 100%;
  letter-spacing: 0.03em;
  text-transform: uppercase;
}
.rewards-banner--{{ section.id }} .rewards-banner__intro > *:first-child{
    margin-top:0;
}
.rewards-banner--{{ section.id }} .rewards-banner__intro > *:last-child{
    margin-bottom:0;
}
 /* .rewards-banner--{{ section.id }} .rewards-banner__steps {
  border-top: 1px solid rgba(0,0,0,0.15);
} */
.rewards-banner--{{ section.id }} .rewards-banner__step {
  display: flex;
  justify-content: space-between;
  padding: 12px 20px;
  border-top: 1px solid rgba(0,0,0,0.15);
  gap: 20px;
}
.rewards-banner--{{ section.id }} .rewards-banner__step span {
  font-size: {{ section.settings.step_font_size_desktop }}px;
  line-height: 1.125;
  color: #1F1F1F;
}
.rewards-banner--{{ section.id }} .rewards-banner__button {
  display: inline-block;
  color: {{ section.settings.button_text_color }};
  font-size: {{ section.settings.button_font_size }}px;
  line-height: 100%;
}

.rewards-banner--{{ section.id }} .section-top-content {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 20px;
    padding: 12px 0 4px 20px;
}

.rewards-banner--{{ section.id }} .section_top_border{
    border-top: 0.75px solid {{ section.settings.border_top_color }};
}


.rewards-banner__steps .accordion__item[open] .plus-wrapper {
  display: none;
}
.rewards-banner__steps .accordion__item .minus-wrapper {
  display:none;
}
.rewards-banner__steps .accordion__item[open] .minus-wrapper {
  display:inline-flex;
}

.rewards-banner details.accordion__item {
    padding: 13px 20px;
    border-top: 1px solid rgba(0, 0, 0, 0.15);
}
.rewards-banner details.accordion__item span {
    font-size: 18px;
    line-height: 1.125;
    text-transform: uppercase;
}
.rewards-banner.rewards_faq .rewards-banner__title {
    width: 462px;
}
.rewards-banner.rewards_faq summary {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.rewards-banner.rewards_faq .accordion__item .svg-wrapper  {
  width: 14px;
  height: 14px;
}
.rewards-banner.rewards_faq .accordion__content p {
    font-size: 16px;
    color: #1F1F1F;
    margin-top: 10px;
    line-height: 1.1;
    width: 100%;
    margin-bottom: 0px;
    text-transform: lowercase;
}
{% assign desktopTitle = section.settings.title_size_desktop %}

@media screen and (max-width:1200px){
    
  .rewards-banner--{{ section.id }} .rewards-banner__title {
    font-size: {{ desktopTitle | times: 0.7 }}px;
  }
}

@media screen and (max-width: 989px){
   .rewards-banner--{{ section.id }} .rewards-banner__step{
        padding: 12px;
   }
}
