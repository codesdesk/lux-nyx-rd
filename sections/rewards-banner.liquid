  }

}
{% endstyle %}

<div class="rewards-banner rewards-banner--{{ section.id }} {{ section.settings.custom_class }} {% if section.settings.full_width %}is-full-width{% endif %}">
  <div class="rewards-banner__media">
    <picture>
      {% if section.settings.mobile_image != blank %}
        <source media="(max-width: 749px)" srcset="{{ section.settings.mobile_image | image_url: width: 1000 }}">
      {% endif %}
      <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.image.alt }}">
    </picture>
    <div class="rewards-banner__overlay"></div>
  </div>


  <div class="{% unless section.settings.full_width %}page-width{% endunless %} rewards-banner__inner">
    <div class="rewards-banner__content">
        <div class="top-content-wrpper">
            <div class=" top-content {% if section.settings.enable_border_top %} section_top_border {% endif %}">
                <div class="section-top-content">
                    {% if section.settings.intro != blank %}
                        <div class="rewards-banner__intro">
                            {{ section.settings.intro }}
                        </div>
                    {% endif %}
                    {% if section.settings.button_text != blank %}
                    <a href="{{ section.settings.button_link }}"  class="rewards-banner__button">{{ section.settings.button_text }}</a>
                    {% endif %}
                </div>
                {% if section.settings.title != blank %}
                    <h2 class="rewards-banner__title">
                        {{ section.settings.title }}
                    </h2>
                {% endif %}
                
            </div>
        </div>

      <div class="rewards-banner__steps{% if section.blocks.size == 0 %} hidden{% endif %}">
        {% if step_count != 0 %}
          {% for block in section.blocks %}
              {% if block.settings.points or block.settings.reward %}
                  <div class="rewards-banner__step">
                    {% if block.settings.points != blank  %}<span>{{ block.settings.points }}</span>{% endif %}
                    {% if block.settings.reward != blank  %}<span>{{ block.settings.reward }}</span>{% endif %}
                  </div>
              {% endif %}
          {% endfor %}
        {% endif %}
        {% if accordion_count != 0 %}
            <div class="accordion">
                {% for block in section.blocks %}
                {% if block.type == 'accordion' %}
                    <details class="accordion__item" {% if block.settings.open_by_default %} open {% endif %}>
                    <summary class="accordion__summary">
                        <span>{{ block.settings.title }}</span>
                        <span class="accordion__icon">
                          <span class="svg-wrapper plus-wrapper">
                            {{- 'icon-plus.svg' | inline_asset_content -}}
                          </span>
                          <span class="svg-wrapper minus-wrapper">
                            {{- 'icon-minus.svg' | inline_asset_content -}}
                          </span>
                        </span>
                    </summary>
                    <div class="accordion__content">
                        {{ block.settings.content }}
                    </div>
                    </details>
                {% endif %}
                {% endfor %}
            </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

