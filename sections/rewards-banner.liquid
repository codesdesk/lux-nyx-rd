  }

  .rewards-banner--{{ section.id }} .rewards-banner__content{
    width: 100%;
    max-width: calc(100% - 30px);
    margin: 0 auto;
    gap: 16px;
  }
  .rewards-banner--{{ section.id }} .rewards-banner__step{
    padding: 14px 0;
  }
  .rewards-banner--{{ section.id }} .section-top-content{
      padding: 12px 0;
    }
  .rewards-banner--{{ section.id }} .section-top-content:has(.rewards-banner__intro){
