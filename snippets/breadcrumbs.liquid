{% unless template == 'index' or template == 'cart' or template == 'list-collections' %}
  <nav class="breadcrumb" role="navigation" aria-label="breadcrumbs">
    <a href="javascript:history.back()" title="Back" class="back">Back</a>
    <a href="/" title="Home" class="path">Home</a>
    {% if template contains 'page' %}
    <span aria-hidden="true" class="divide">/</span>
    <span class="path">{{ page.title }}</span>
    {% elsif template contains 'product' %}
    {% if collection.url %}
    <span aria-hidden="true" class="divide">/</span>
    <a href="{{collection.url}}" class="path">{{ collection.title }}</a>
    {% endif %}
    <span aria-hidden="true" class="divide">/</span>
    <span class="path">{{ product.title }}</span>
    {% elsif template contains 'collection' and collection.handle %}
    <span aria-hidden="true" class="divide">/</span>
    {% if current_tags %}
    {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
    <a href="{{url}}" class="path">{{ collection.title }}</a>
    <span aria-hidden="true" class="divide">/</span>
    <span>{{ current_tags | join: " + " }}</span>
    {% else %}
    <span class="path">{{ collection.title }}</span>
    {% endif %}
    {% elsif template == 'blog' %}
    <span aria-hidden="true" class="divide">/</span>
    {% if current_tags %}
    {{ blog.title | link_to: blog.url |class : 'path'  }}
    <span aria-hidden="true" class="divide">/</span>
    <span>{{ current_tags | join: " + " }}</span>
    {% else %}
    <span class="path">{{ blog.title }}</span>
    {% endif %}
    {% elsif template == 'article' %}
    <span aria-hidden="true" class="divide">/</span>
    {{ blog.title | link_to: blog.url |class : 'path' }}
    <span aria-hidden="true" class="divide">/</span>
    <span class="path">{{ article.title }}</span>
    {% else %}
    <span aria-hidden="true" class="divide">/</span>
    <span class="path">{{ page_title }}</span>
    {% endif %}
  </nav>
{% endunless %}